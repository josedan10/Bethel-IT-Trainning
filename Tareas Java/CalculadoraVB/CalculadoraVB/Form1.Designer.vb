    Private Sub btnBorrar_Click(sender As Object, e As EventArgs) Handles btnBorrar.Click

        Dim resultado As String = txtResultado.Text
        Dim indice As Single = resultado.Length - 1


        If txtResultado.Text <> "" Then

            resultado = resultado.Remove(indice)
            txtResultado.Text = resultado
        End If

    End Sub

    Private Sub AgregarNumero(sender As Object, e As EventArgs)

        Dim btnNro As Button = DirectCast(sender, Button)

        Select Case txtResultado.Text

            Case "0"
                'Hay un caso especial si el cuadro de texto ya es 0
                'No Me interesa volver a poner otro cero

                If btnNro.Text <> "0" And btnNro.Text <> "." Then txtResultado.Text = btnNro.Text

            Case Else
                txtResultado.Text += btnNro.Text

        End Select

    End Sub

    Private Sub AgregarOperador(sender As Object, e As EventArgs)

        Dim operador As Button = DirectCast(sender, Button)
        Dim numero1 As Double = Convert.ToDouble(txtResultado.Text)

        'Asignamos el primer atributo en operacion
        operacion.numero1 = numero1

        'Asignamos el operador en operacion
        operacion.operador = operador.Text

        'Borramos el Textbox para recibir el otro número
        txtResultado.Text = ""

    End Sub

    Private Sub RealizarOperacion(sender As Object, e As EventArgs)

        operacion.numero2 = Convert.ToDouble(txtResultado.Text)
        txtResultado.Text = ""
        operacion.Calcular(txtResultado)

    End Sub

